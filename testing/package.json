{
  "name": "@showcase/testing",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for the showcase project",
  "private": true,
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:visual": "playwright test --grep @visual",
    "test:performance": "playwright test --grep @performance",
    "test:integration": "playwright test --grep @integration",
    "test:api": "jest api/",
    "test:component": "jest components/",
    "test:all": "npm run test:api && npm run test:component && npm run test:e2e",
    "test:ci": "npm run test:all -- --reporter=junit",
    "install:browsers": "npx playwright install",
    "generate:report": "npx playwright show-report",
    "update:snapshots": "playwright test --update-snapshots"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/vue": "^8.0.0",
    "@testing-library/user-event": "^14.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.3.0",
    "puppeteer": "^21.5.0",
    "supertest": "^6.3.0",
    "axe-core": "^4.8.0",
    "axe-playwright": "^2.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.0"
  }
}