# Showcase Application Environment Variables
# Copy this file to .env and update the values as needed

# ===========================================
# NODE ENVIRONMENT
# ===========================================
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://admin:password123@localhost:27017/showcase?authSource=admin
MONGODB_TEST_URI=mongodb://admin:password123@localhost:27017/showcase-test?authSource=admin

# MongoDB Credentials (used by Docker)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=showcase

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long-for-production
JWT_EXPIRES_IN=1d

# ===========================================
# BCRYPT CONFIGURATION
# ===========================================
BCRYPT_ROUNDS=12

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Express API Server
EXPRESS_PORT=5000
EXPRESS_HOST=0.0.0.0

# Vue Shell Host
SHELL_PORT=3000
SHELL_HOST=0.0.0.0

# React Remote
REACT_PORT=3001
REACT_HOST=0.0.0.0

# Vue Remote
VUE_PORT=3002
VUE_HOST=0.0.0.0

# Angular Remote
ANGULAR_PORT=3004
ANGULAR_HOST=0.0.0.0

# TypeScript Remote
TS_PORT=3005
TS_HOST=0.0.0.0

# JavaScript Remote
JS_PORT=3006
JS_HOST=0.0.0.0

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3004,http://localhost:3005,http://localhost:3006

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=5m

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Enable security middleware
ENABLE_HELMET=true
ENABLE_RATE_LIMIT=true
ENABLE_CORS=true

# Session configuration
SESSION_SECRET=your-session-secret-key-different-from-jwt
SESSION_MAX_AGE=86400000

# CSRF Protection
CSRF_SECRET=your-csrf-secret-key

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM="Showcase App <noreply@showcase.com>"

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads

# ===========================================
# WEBHOOK CONFIGURATION (Optional)
# ===========================================
WEBHOOK_SECRET=your-webhook-secret

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# MONITORING & ANALYTICS (Optional)
# ===========================================
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Enable development features
DEV_ENABLE_MOCK_DATA=true
DEV_ENABLE_DEBUG_ROUTES=true
DEV_BYPASS_AUTH=false

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
# Used by docker-compose
COMPOSE_PROJECT_NAME=showcase
DOCKER_BUILDKIT=1

# ===========================================
# NGINX CONFIGURATION
# ===========================================
NGINX_PORT=80
NGINX_SSL_PORT=443
NGINX_CLIENT_MAX_BODY_SIZE=10m